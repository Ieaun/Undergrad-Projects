        <TextBlock HorizontalAlignment="Left" Margin="101,115,0,0" TextWrapping="Wrap" Text="Other Options" VerticalAlignment="Top" Width="106" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="101,10,0,0" TextWrapping="Wrap" Text="Manager Options" VerticalAlignment="Top" Width="106" TextAlignment="Center"/>
        <Button x:Name="viewReportButton" Content="View Report" HorizontalAlignment="Left" Margin="101,31,0,0" VerticalAlignment="Top" Width="106" Click="viewReportButton_Click"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" Width="75" Click="BackButton_Click"/>
        <Button x:Name="newDBButton" Content="New DB" HorizontalAlignment="Left" Margin="101,91,0,0" VerticalAlignment="Top" Width="106" Click="newDBButton_Click"/>

    </Grid>
</Window>
