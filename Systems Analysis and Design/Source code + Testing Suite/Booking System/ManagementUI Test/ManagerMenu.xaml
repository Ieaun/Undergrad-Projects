<Window x:Class="ManagementUI_Test.ManagerMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementUI_Test"
        mc:Ignorable="d"
        Title="Main Menu" Height="300" Width="300">
    <Grid>
        <Button x:Name="makeBookingButton" Content="View Bookings" HorizontalAlignment="Left" Margin="101,136,0,0" VerticalAlignment="Top" Width="106" Click="makeBookingButton_Click"/>
        <Button x:Name="manageCustomersButton" Content="Manage Customers" HorizontalAlignment="Left" Margin="101,170,0,0" VerticalAlignment="Top" Width="106" Click="manageCustomersButton_Click"/>
