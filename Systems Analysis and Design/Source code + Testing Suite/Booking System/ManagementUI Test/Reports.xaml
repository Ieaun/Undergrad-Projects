        <ListBox x:Name="upcomingPlaysListBox" HorizontalAlignment="Left" Height="227" Margin="74,101,0,0" VerticalAlignment="Top" Width="180" SelectionChanged="upcomingPlaysListBox_SelectionChanged"/>
