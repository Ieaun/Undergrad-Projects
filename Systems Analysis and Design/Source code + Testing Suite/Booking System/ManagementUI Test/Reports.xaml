        <Button x:Name="PrintGoldmembers" Content="Print" HorizontalAlignment="Left" Margin="656,333,0,0" VerticalAlignment="Top" Width="75" Click="PrintGoldmembers_Click"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="10,340,0,0" VerticalAlignment="Top" Width="75" Click="BackButton_Click"/>
        <Label x:Name="SeatsSoldLabel" Content="Seats Sold: " HorizontalAlignment="Left" Margin="303,302,0,0" VerticalAlignment="Top"/>
        <Label x:Name="TotalSeatsLabel" Content="Total Seats: " HorizontalAlignment="Left" Margin="301,333,0,0" VerticalAlignment="Top"/>

